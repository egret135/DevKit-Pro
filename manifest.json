{
  "manifest_version": 3,
  "name": "DevKit Pro",
  "version": "2.0.0",
  "description": "Developer toolkit: DDL/JSON to Go Struct, DDL Schema Diff, and Markdown Preview with Mermaid diagrams",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "downloads"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}